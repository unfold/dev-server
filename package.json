{
  "name": "@unfold/dev-server",
  "version": "0.2.0",
  "author": "Unfold <github@unfold.no>",
  "description": "Development server for webpack with hot module reloading, simplified console outpout and connect middleware support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/unfold/dev-server"
  },
  "engines": {
    "node": "0.10.x",
    "npm": ">=2.1.x"
  },
  "bin": {
    "dev-server": "bin/cli.js"
  },
  "dependencies": {
    "commander": "^2.7.1",
    "express": "^4.12.3",
    "socket.io": "^1.3.5",
    "socket.io-client": "^1.3.5",
    "webpack": "^1.3.0",
    "webpack-dev-middleware": "^1.0.11"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "comma-dangle": 0,
      "semi": [
        2,
        "always"
      ]
    }
  }
}
